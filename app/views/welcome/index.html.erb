<h1><marquee>Miniii InStA
<img src="assets/images/logo/Instagram(1).jpg"> </marquee></h1>


<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>.

  <br> and role is <%= current_user.role? %>

  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> | 
  <%= link_to "New Post", new_post_path(current_user.id) %>
  <% if current_user.role? == "Admin" %>

  <%= render 'user' %>
  <%else%>
    <table>
	<thead>
		<tr>
		<th>User Name</th>
		<th>Email</th>
		<th>Role</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= current_user.user_name %></td>
			<td><%= current_user.email %></td>
			<td><%= current_user.roles.collect(&:name) %></td>
		</tr>
	</tbody>
</table> 
<% end %>
<div>
<%= render "post"%>
</div>


<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
<% end %>
