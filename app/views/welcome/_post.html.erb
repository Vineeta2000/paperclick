
<h1>Post</h1>
<table>
 <tr>
  <th>User</th>
   <th>Caption</th>
  

<% @posts.each do |post| %>
   <tr>
    <td><em><%= post.user.user_name %></em></td>
   <td><%= post.caption %></td>  
   
   <td><%= link_to "show" ,  post_path(post.id )%></td>
   <% if  post.user == current_user || current_user.role?.eql?("Admin") %>

   <td><%= link_to "edit",  edit_post_path(post) %></td>
   <td><%= link_to 'delete' , post_path(post.id) , method: :delete %></td>

   <% end %>
   
 </tr>
<%end%>
</table>